{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@domain/*":[
        "src/domain/*"
      ],
      "@app/*":[
        "src/app/*"
      ],
      "@presentation/*":[
        "src/presentation/*"
      ],
      "@infra/*":[
        "src/infra/*"
      ],
      "@main/*":[
        "src/main/*"
      ]
    },
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["dist", "**/*spec.ts"]
}