datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id              String            @id
  login           String            @unique
  name            String
  password        String
  status          userStatus
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  vehicle         vehicle[]
  rentalAgreement rentalAgreement[]
}

enum userStatus {
  ACTIVATED
  DISABLED
}

model vehicle {
  id        String        @id
  model     String
  ownerId   String
  owner     user          @relation(fields: [ownerId], references: [id])
  price     Int
  status    vehicleStatus
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum vehicleStatus {
  HIRED
  AVAILABLE
  DISABLED
  RESERVED
}

model rentalAgreement {
  id            String        @id
  hirerId       String
  hirer         user          @relation(fields: [hirerId], references: [id])
  paymentStatus paymentStatus
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  rentalAgreementStatus rentalAgreementStatus
}

enum paymentStatus {
  HIRED
  AVAILABLE
  DISABLED
}

enum rentalAgreementStatus {
  OPEN
  CLOSED
}
