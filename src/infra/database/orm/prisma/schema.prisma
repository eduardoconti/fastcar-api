datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id              String            @id
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  login           String            @unique
  name            String
  password        String
  status          userStatus
  vehicle         vehicle[]
  rentalAgreement rentalAgreement[]
}

enum userStatus {
  ACTIVATED
  DISABLED
}

model vehicle {
  id              String            @id
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  model           String
  ownerId         String
  price           Int
  status          vehicleStatus
  rentalAgreement rentalAgreement[]
  owner           user              @relation(fields: [ownerId], references: [id])
}

enum vehicleStatus {
  HIRED
  AVAILABLE
  DISABLED
  RESERVED
}

model rentalAgreement {
  id                    String                @id
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  hirerId               String
  paymentStatus         paymentStatus
  rentalAgreementStatus rentalAgreementStatus
  initialDate           DateTime
  finalDate             DateTime
  value                 Int
  vehicleId             String
  hirer                 user                  @relation(fields: [hirerId], references: [id])
  vehicle               vehicle               @relation(fields: [vehicleId], references: [id])
}

enum paymentStatus {
  HIRED
  AVAILABLE
  DISABLED
}

enum rentalAgreementStatus {
  OPEN
  CLOSED
}
